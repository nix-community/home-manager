{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "echo 'Running bash command: $CLAUDE_TOOL_INPUT'",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "echo 'User submitted: $CLAUDE_USER_PROMPT'",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "model": "claude-3-5-sonnet-20241022",
  "permissions": {
    "additionalDirectories": [
      "../docs/"
    ],
    "allow": [
      "Bash(git diff:*)",
      "Edit"
    ],
    "ask": [
      "Bash(git push:*)"
    ],
    "defaultMode": "acceptEdits",
    "deny": [
      "WebFetch",
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./secrets/**)"
    ],
    "disableBypassPermissionsMode": "disable"
  },
  "statusLine": {
    "command": "input=$(cat); echo \"[$(echo \"$input\" | jq -r '.model.display_name')] üìÅ $(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\")\"",
    "padding": 0,
    "type": "command"
  },
  "theme": "dark"
}
