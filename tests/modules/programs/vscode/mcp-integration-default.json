{
  "servers": {
    "atlassian": {
      "headers": {
        "Authorization": "Bearer token"
      },
      "type": "sse",
      "url": "https://api-private.atlassian.com/mcp"
    },
    "context7": {
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "everything": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-everything"
      ],
      "command": "npx",
      "env": {},
      "type": "stdio"
    }
  }
}
